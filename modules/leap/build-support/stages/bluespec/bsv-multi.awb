#/********************************************************************
#* Python libraries for Bluespec MultiFPGA build
#********************************************************************/

%name BSV Build Tool MultiFPGA
%desc This tool builds Bluespec modules in sub directories

%attributes tool

%provides bsv_tool

%scons %library BSVmulti.py

%param BSC_FLAGS  "-steps 10000000 +RTS -K1000M -RTS -keep-fires -aggressive-conditions -wait-for-license -no-show-method-conf -no-opt-bool -licenseWarning 7 -elab -show-schedule -verilog -show-range-conflict -remove-dollar"  "Bluespec compiler options"

%param BUILD_VERILOG  1  "Direct BSC to build verilog"

%param BSV_DEBUG 1 "BSV build debug"

%param --global BUILD_LOGS_ONLY 0 "True if we should build only logfiles"

